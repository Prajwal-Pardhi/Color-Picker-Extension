{
    "name" : "Color Picker",

    "description": "A color picker extension",

    "version": "1.0",

    "manifest_version": 3,

    "background":{
        "service-worker":"background.js"
    },
    "permissions":[
        "storage",
        "activeTab",
        "scripting"
    ],

    "options_page": "options.html",

    "action":{
        "default_popup": "popup.html"
    },

    "icons":{
        "16":"images/colorpicker_16.png",
        "32":"images/colorpicker_32.png",
        "64":"images/colorpicker_64.png"
    }
}